<!-- Passing data into index.handlebars -->
<!-- Loop through the data -->
<div class="container">
  <!-- Row one of ... -->
  <div class="row">
    <!-- Row one, column one -->
    <div class="col-md-12" id="heading">
    <h1>The Return of the Gourmet Burger</h1>
    </div>
      <div class="col-md-6" class="task">
        <div class="row">
          {{#each data}}
            {{#unless this.devoured}}
          <!-- Column    -->
          <div class="col-md-6">
            <pre>{{this.id}}.{{this.burger_name}}</pre>
          </div>
        <!-- Create a button that will send the this.id back to the server, unless devoured is 1 -->
        <div class="col-12-3">
          <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <!-- Hiding the id from the user -->
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <br>
            <!-- Send the data to the server -->
            <button type="submit" class="btn btn-default">DEVOUR IT!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
        </div>
      </div>
    </div>
<!-- Container ends -->
</div>
